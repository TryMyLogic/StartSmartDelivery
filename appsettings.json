{
    "RecordLimit": "20",
    "ConnectionStrings": {
        "StartSmartDB": "Server=localhost\\SQLEXPRESS;Database=StartSmartDelivery;Integrated Security=True;TrustServerCertificate=True;",
        "TestDB": "Server=localhost\\SQLEXPRESS;Database=TestStartSmartDelivery;Integrated Security=True;TrustServerCertificate=True;"
    },

    "Serilog": {
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "fileSizeLimitBytes": 104857600, // 100MB 
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "SqlServer",
                "Args": {
                    "connectionString": "ConnectionStrings:StartSmartDB",
                    "tableName": "AuditLogs",
                    "autoCreateSqlTable": false,
                    "columnOptionsMode": "Custom"
                }
            }
        ]
    }



}
